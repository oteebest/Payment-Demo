@{
    ViewData["Title"] = "Payment Successful";
}

@section Styles {
    <style>
        .success-hero {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            margin: 0 -30px 30px -30px;
            border-radius: 0 0 15px 15px;
            text-align: center;
            padding: 60px 30px;
        }

        .success-icon {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            width: 120px;
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            animation: successPulse 2s ease-in-out infinite;
        }

        @@keyframes successPulse {
            0% {
                transform: scale(1);
                box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.4);
            }

            50% {
                transform: scale(1.05);
                box-shadow: 0 0 0 20px rgba(255, 255, 255, 0);
            }

            100% {
                transform: scale(1);
                box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
            }
        }

        .success-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            border: 1px solid #dee2e6;
            text-align: center;
            margin-bottom: 30px;
        }

        .payment-details {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 15px;
            padding: 25px;
            margin: 30px 0;
            border: 1px solid #dee2e6;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #e9ecef;
        }

            .detail-row:last-child {
                border-bottom: none;
                font-weight: bold;
                font-size: 1.1rem;
                color: #28a745;
            }

        .btn-action {
            background: linear-gradient(45deg, #007bff, #0056b3);
            border: none;
            transition: all 0.3s ease;
            border-radius: 25px;
            font-weight: 600;
            padding: 12px 30px;
            margin: 10px;
        }

            .btn-action:hover {
                background: linear-gradient(45deg, #0056b3, #004085);
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0,123,255,0.3);
            }

        .btn-secondary-action {
            background: transparent;
            border: 2px solid #6c757d;
            color: #6c757d;
            border-radius: 25px;
            font-weight: 600;
            padding: 10px 30px;
            margin: 10px;
            transition: all 0.3s ease;
        }

            .btn-secondary-action:hover {
                background: #6c757d;
                color: white;
                transform: translateY(-2px);
            }

        .security-note {
            background: rgba(40,167,69,0.1);
            border: 2px solid #28a745;
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            margin-top: 30px;
        }

        .feature-highlight {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 15px 0;
            color: #28a745;
        }

            .feature-highlight i {
                margin-right: 10px;
                font-size: 1.2rem;
            }
    </style>
}

<!-- Success Hero Section -->
<div class="success-hero text-white">
    <div class="success-icon">
        <i class="fas fa-check fa-4x text-white"></i>
    </div>
    <h1 class="display-4 fw-bold mb-3">Payment Successful!</h1>
    <p class="lead mb-0">Your order has been processed securely through Braintree</p>
</div>

<!-- Main Success Content -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="success-card">
            <div class="mb-4">
                <i class="fas fa-credit-card fa-3x text-success mb-3"></i>
                <h3 class="fw-bold text-dark mb-3">Thank You for Your Purchase!</h3>
                <p class="text-muted mb-4">
                    Your payment has been successfully processed using Braintree's secure payment system.
                    You will receive a confirmation email shortly with your order details.
                </p>
            </div>

 

            <!-- Action Buttons -->
            <div class="text-center mt-4">
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-action">
                    <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                </a>

                <a asp-controller="Transactions" asp-action="Index" class="btn btn-outline-secondary btn-secondary-action">
                    <i class="fas fa-history me-2"></i>View Payment History
                </a>
            </div>
        </div>

        <!-- Security Note -->
        <div class="security-note">
            <div class="d-flex align-items-center justify-content-center mb-2">
                <i class="fas fa-info-circle text-success me-2"></i>
                <strong class="text-success">Braintree Payment Demo</strong>
            </div>
            <small class="text-muted">
                This is a demonstration of Braintree's secure payment processing.
                No actual charges were made to your payment method.
            </small>
        </div>
    </div>
</div>